<odoo>
    <data>

       <!-- Form -->
       <record id="fare_view_form" model="ir.ui.view">
           <field name="name">fare_view_form_view_form</field>
           <field name="model">cxn.fare</field>
           <field name="arch" type="xml">
               <form string="fare_view_form_form">
                   <sheet>
                       <group>
                           <field name="name"/>
                           <field name="description"/>
                           <field name="color" widget="color_picker"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>

        <!-- Tree -->
        <record id="fare_view_tree" model="ir.ui.view">
            <field name="name">fare_view_tree</field>
            <field name="model">cxn.fare</field>
            <field name="arch" type="xml">
                <tree string="fare_tree">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="color" widget="color"/>
                </tree>
            </field>
        </record>



    </data>
</odoo>