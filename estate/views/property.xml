<odoo>
    <data>

        <!-- Tree -->
        <record id="property_view_tree" model="ir.ui.view">
            <field name="name">property_view_tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="property_tree">
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="postcode"/>
                    <field name="tag_ids"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                </tree>
            </field>
        </record>

        <!-- Form -->
        <record id="property_view_form" model="ir.ui.view">
            <field name="name">property_view_form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="property_form">
                    <header>
<!--                        <button name="estate.action_report_estate_property" string="Print" type="action"-->
<!--                                class="oe_highlight"/>-->
                        <button name="action_cancel" type="object" title="Cancel" icon="fa-times" string="Cancel"/>
                        <button name="action_sold" type="object" title="Sold" icon="fa-times"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </div>
                        <group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <group>
                                    <field name="offer_ids"/>
                                </group>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search -->
        <record id="view_property_search" model="ir.ui.view">
            <field name="name">property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="facades"/>
                    <field name="expected_price" string=">= Expected Price"
                           domain_filter="[('expected_price', '>=', self)]"/>
                    <separator/>
                    <filter string="sold" name="Sold" domain="[('state', '=', 'sold')]"/>
                    <filter string="new" name="New" domain="[('state', '=', 'new')]"/>
                    <separator/>
                    <filter string="Available" name="available" domain="[('state', 'in', ['new','offer_received'])]"/>
                    <separator/>
                    <group expand="0" string="Group by">
                        <filter name='gb_postcode' string="Postcode" context="{'group_by':'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

         <!--  Kanban Quick-Form -->
         <record id="property_quick_form" model="ir.ui.view">
             <field name="name">_quick_form</field>
             <field name="model">estate.property</field>
             <field name="arch" type="xml">
                 <form>
                     <group>
                         <field name="name"/>
                     </group>
                 </form>
             </field>
         </record>

       <!--  Kanban -->
       <record id="property_view_kanban" model="ir.ui.view">
           <field name="name">estate.property.kanban</field>
           <field name="model">estate.property</field>
           <field name="arch" type="xml">
               <kanban default_group_by="" quick_create_view="estate.property_quick_form" group_create="0" group_delete="False" group_edit="0" records_draggable="0" string="">
                   <field name="state"/>
                   <templates>
                       <t t-name="kanban-box">
                           <div class="oe_kanban_global_click">
                               <div>
                                   <strong class="o_kanban_record_title">
                                       <field name="name"/>
                                   </strong>
                               </div>
                               <div>
                                   Expected Price: <field name="expected_price"/>
                               </div>
                               <div t-if="record.state.raw_value == 'offer_received'">
                                   Best Offer: <field name="best_price"/>
                               </div>
                               <div t-if="record.selling_price.raw_value">
                                   Selling Price: <field name="selling_price"/>
                               </div>
                               <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                           </div>
                       </t>
                   </templates>
               </kanban>
           </field>
       </record>



    </data>
</odoo>